# coding: utf-8
from typing import Union, Dict, Any, Optional

from core.basic_models.actions.basic_actions import Action
from core.text_preprocessing.preprocessing_result import TextPreprocessingResult

from scenarios.user.user_model import User


class CustomAction(Action):

    """
        Тут можно создать собственные Actions для использования их в сценариях
    """

    def __init__(cls, items: Dict[str, Any], id: Optional[str] = None):
        super(CustomAction, cls).__init__(items, id)
        items = items or {}
        cls.test_param = items.get("test_param")

    async def run(cls, user: User, text_preprocessing_result: TextPreprocessingResult,
                  params: Optional[Dict[str, Union[str, float, int]]] = None) -> None:
        print("Test Action")
        return None
